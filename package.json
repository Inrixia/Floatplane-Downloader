{
	"name": "floatplane-plex-downloader",
	"version": "5.10.0",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "tsc && node ./dist/float.js",
		"startHeadless": "tsc && node ./dist/float.js --headless",
		"build": "esbuild ./src/float.ts --bundle --external:pg-hstore --external:mock-aws-s3 --external:aws-sdk --external:nock --platform=node --outfile=dist/float.cjs && pkg ./dist/float.cjs --out-path=./build -t latest-linux,latest-mac,latest-win --compress GZip",
		"checkLint": "eslint ./src",
		"lint": "eslint ./src --fix",
		"sanity": "npm run checkLint && npm run testESM && npm run testBinaryWin",
		"testESM": "tsc && node ./dist/float.js --sanityCheck",
		"testBinaryLinux": "npm run build && ./build/float-linux --sanityCheck",
		"testBinaryWin": "npm run build && cd ./build && float-win.exe --sanityCheck"
	},
	"dependencies": {
		"@ctrl/plex": "^1.5.3",
		"@inrixia/db": "2.0.2",
		"@inrixia/helpers": "^2.0.10",
		"chalk-template": "^1.1.0",
		"default-import": "^1.1.5",
		"dotenv": "^16.3.1",
		"ffbinaries": "^1.1.5",
		"floatplane": "^4.5.0",
		"html-to-text": "^9.0.5",
		"json5": "^2.2.3",
		"mime-types": "^2.1.35",
		"multi-progress-bars": "^5.0.3",
		"process.argv": "^0.6.1",
		"prompts": "^2.4.2",
		"sanitize-filename": "^1.6.3",
		"semver": "^7.5.4",
		"stream-throttle": "^0.1.3",
		"tough-cookie": "^4.1.3",
		"tough-cookie-file-store": "^2.0.3"
	},
	"devDependencies": {
		"@types/html-to-text": "^9.0.1",
		"@types/mime-types": "^2.1.1",
		"@types/multi-progress": "^2.0.3",
		"@types/prompts": "^2.4.4",
		"@types/semver": "^7.5.0",
		"@types/stream-throttle": "^0.1.1",
		"@types/tough-cookie-file-store": "^2.0.1",
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"esbuild": "^0.19.2",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"pkg": "^5.8.1",
		"typescript": "^5.1.6"
	}
}