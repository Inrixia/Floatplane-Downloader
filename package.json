{
  "name": "floatplane-plex-downloader",
  "version": "5.17.0",
  "private": true,
  "type": "module",
  "scripts": {
    "tsc": "tsc --incremental",
    "start": "pnpm run bundle && node ./dist/float.cjs",
    "startHeadless": "pnpm run bundle && node ./dist/float.cjs --headless",
    "test": "pnpm run build && ./build/float --sanityCheck && node ./dist/float.cjs --sanityCheck",
    "makeBlob": "node --experimental-sea-config ./sea-config.json",
    "bundle": "rimraf ./dist && npx esbuild ./src/float.ts --bundle --minify --tree-shaking=true --platform=node --outfile=./dist/float.cjs",
    "inject": "npx postject ./build/float NODE_SEA_BLOB ./dist/float.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2 --macho-segment-name NODE_SEA",
    "build": "node make.js ./build/float && pnpm run bundle && pnpm run makeBlob && pnpm run inject && rimraf ./build/version"
  },
  "dependencies": {
    "@ctrl/plex": "^3.6.0",
    "@inrixia/db": "2.0.2",
    "@inrixia/helpers": "^3.20.0",
    "@npmcli/package-json": "^6.2.0",
    "@types/tough-cookie": "^4.0.5",
    "chalk-template": "^1.1.0",
    "default-import": "^2.0.8",
    "dotenv": "^16.5.0",
    "ffbinaries": "^1.1.6",
    "floatplane": "^4.6.5",
    "floatplane-plex-downloader": "file:",
    "html-to-text": "^9.0.5",
    "json5": "^2.2.3",
    "mime-types": "^3.0.1",
    "multi-progress-bars": "^5.0.3",
    "process.argv": "^1.0.0",
    "prom-client": "^15.1.3",
    "prompts": "^2.4.2",
    "sanitize-filename": "^1.6.3",
    "semver": "^7.7.2",
    "stream-throttle": "^0.1.3",
    "tough-cookie": "5.1.2",
    "tough-cookie-file-store": "^3.0.1",
    "ws": "^8.18.2",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@types/html-to-text": "^9.0.4",
    "@types/mime-types": "^3.0.0",
    "@types/multi-progress": "^2.0.6",
    "@types/node": "^22.15.29",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.0",
    "@types/stream-throttle": "^0.1.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "got": "^14.4.7",
    "postject": "1.0.0-alpha.6",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}